<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.mercadopago.example"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name="com.mercadopago.SampleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.mercadopago.login" />
        <activity android:name="com.mercadopago.DatosActivity" />
        <activity android:name="com.mercadopago.creacuenta" />
        <activity android:name="com.mercadopago.EnviarActivity" />
        <activity android:name="com.mercadopago.MainActivity" />
        <activity android:name="com.mercadopago.MainActivity1" />
        <activity
            android:name="com.mercadopago.CheckoutExampleActivity"
            android:label="@string/title_activity_checkout_example" />
        <activity
            android:name="com.mercadopago.SelectCheckoutActivity"
            android:label="@string/title_activity_checkout_example"/>

        <activity android:name="com.mercadopago.CustomInitializationActivity"/>
        <activity android:name="com.mercadopago.splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />


</manifest>